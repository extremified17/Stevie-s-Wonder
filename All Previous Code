int active = 0;

int button1State = 0;
int button2State = 0;
int button3State = 0;
int button4State = 0;
int button5State = 0;
int button6State = 0;


/* for loop template
	for(int pinNumber = X; pinNumber < Y; pinNumber++)
    {
    	pinMode/digitalRead/digitalWrite(pinNumber, HIGH/OUTPUT);
    }
*/
void setup()
{
  for(int pinNumber = 1; pinNumber < 7; pinNumber++)
  {
    pinMode(pinNumber, INPUT);
  }
  
  for(int pinNumber = 8; pinNumber < 14; pinNumber++)
  {
    pinMode(pinNumber, OUTPUT);
  }
}
  
void loop()
{  
  // variables noting which buttons are on
  button1State = digitalRead(1);
  button2State = digitalRead(2);
  button3State = digitalRead(3);
  button4State = digitalRead(4);
  button5State = digitalRead(5);
  button6State = digitalRead(6);
  
  
  // ONE BUTTON SCENARIOS
  
  
  
  if(button1State == HIGH)
  {
    active = 1;
  }
  
  if(button2State == HIGH)
  {
    active = 2;
  }
  
  if(button3State == HIGH)
  {
    active = 3;
  }
  
  if(button4State == HIGH)
  {
    active = 4;
  }
  
  if(button5State == HIGH)
  {
    active = 5;
  }
  
  if(button6State == HIGH)
  {
    active = 6;
  }
  
  
  
  // TWO BUTTON SCENARIOS
  
  
  // 1-6
  if(button1State == HIGH && button2State == HIGH)
  {
    active = 12;
  }
  
  if(button1State == HIGH && button3State == HIGH)
  {
    active = 13;
  }
  
  if(button1State == HIGH && button4State == HIGH)
  {
    active = 14;
  }
  
  if(button1State == HIGH && button5State == HIGH)
  {
    active = 15;
  }
  
  if(button1State == HIGH && button6State == HIGH)
  {
    active = 16;
  }
  
  // 2-6
  if(button2State == HIGH && button3State == HIGH)
  {
    active = 23;
  }
  
  if(button2State == HIGH && button4State == HIGH)
  {
    active = 24;
  }
  
  if(button2State == HIGH && button5State == HIGH)
  {
    active = 25;
  }
  
  if(button2State == HIGH && button6State == HIGH)
  {
    active = 26;
  }
  
  // 3-6
  if(button3State == HIGH && button4State == HIGH)
  {
    active = 34;
  }
  
  if(button3State == HIGH && button5State == HIGH)
  {
    active = 35;
  }
  
  if(button3State == HIGH && button6State == HIGH)
  {
    active = 36;
  }
  
  // 4-6
  if(button4State == HIGH && button5State == HIGH)
  {
    active = 45;
  }
  
  if(button4State == HIGH && button6State == HIGH)
  {
    active = 46;
  }
  
  // 5-6
  if(button5State == HIGH && button6State == HIGH)
  {
    active = 56;
  }

  
  
  // SCENARIO ACTIONS
  
  
  
  // ONE BUTTON SCENARIOS
  
  if(active == 1)
  {
    digitalWrite(8, HIGH);
  }
  
  if(active == 2)
  {
    digitalWrite(9, HIGH);
  }
  
  if(active == 3)
  {
    digitalWrite(10, HIGH);
  }
  
  if(active == 4)
  {
    digitalWrite(11, HIGH);
  }
  
  if(active == 5)
  {
    digitalWrite(12, HIGH);
  }
  
  if(active == 6)
  {
    digitalWrite(13, HIGH);
  }
  
  if(active == )
  {
    for(int pinNumber = ; pinNumber < ; pinNumber++)
    {
      digitalWrite(pinNumber, HIGH);
      delay(500);
      digitalWrite(pinNumber, LOW);
    }
    
    for(int pinNumber = ; pinNumber < ; pinNumber++)
    {
      digitalWrite(, HIGH);
      delay(500);
      digitalWrite(, LOW);
    }
  }
  
  if(active == )
  {
    for(int pinNumber = ; pinNumber < ; pinNumber++)
    {
      digitalWrite(pinNumber, HIGH);
      delay(500);
      digitalWrite(pinNumber, LOW);
    }
    
    for(int pinNumber = ; pinNumber < ; pinNumber++)
    {
      digitalWrite(, HIGH);
      delay(500);
      digitalWrite(, LOW);
    }
  }
  
  if(active == )
  {
    for(int pinNumber = ; pinNumber < ; pinNumber++)
    {
      digitalWrite(pinNumber, HIGH);
      delay(500);
      digitalWrite(pinNumber, LOW);
    }
    
    for(int pinNumber = ; pinNumber < ; pinNumber++)
    {
      digitalWrite(, HIGH);
      delay(500);
      digitalWrite(, LOW);
    }
  }
  
  if(active == )
  {
    for(int pinNumber = ; pinNumber < ; pinNumber++)
    {
      digitalWrite(pinNumber, HIGH);
      delay(500);
      digitalWrite(pinNumber, LOW);
    }
    
    for(int pinNumber = ; pinNumber < ; pinNumber++)
    {
      digitalWrite(, HIGH);
      delay(500);
      digitalWrite(, LOW);
    }
  }
  
  if(active == )
  {
    for(int pinNumber = ; pinNumber < ; pinNumber++)
    {
      digitalWrite(pinNumber, HIGH);
      delay(500);
      digitalWrite(pinNumber, LOW);
    }
    
    for(int pinNumber = ; pinNumber < ; pinNumber++)
    {
      digitalWrite(, HIGH);
      delay(500);
      digitalWrite(, LOW);
    }
  }
  
  if(active == )
  {
    for(int pinNumber = ; pinNumber < ; pinNumber++)
    {
      digitalWrite(pinNumber, HIGH);
      delay(500);
      digitalWrite(pinNumber, LOW);
    }
    
    for(int pinNumber = ; pinNumber < ; pinNumber++)
    {
      digitalWrite(, HIGH);
      delay(500);
      digitalWrite(, LOW);
    }
  }
 
}
